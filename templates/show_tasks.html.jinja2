{% from "forms.html.jinja2" import render_field %}

{{ tasks_list.name }} list:

<ul>
    {% for task in tasks_list.tasks %}
        <li>
            <a href="{{ url_for("toggle_task", task_id=task.id) }}"><input type="checkbox" {{ "checked" if task.isDone }}></a>
            {{ task.label }}
            <a href="{{ url_for("delete_task", task_id=task.id) }}">delete</a>
        </li>
    {% endfor %}
</ul>

<form action="{{ url_for("homepage", tasks_list_name=tasks_list.name) }}" method="post">
    {{ form.hidden_tag() }}

    {{ render_field(form.label) }}

    <input type="submit">
</form>